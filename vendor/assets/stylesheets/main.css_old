    border-top: 5px solid #384045;
    margin-bottom: 35px;
    min-height: 50px;
    padding: 20px 0;
    position: relative;
    text-align: left;
}
section.page-top ul.breadcrumb {
    background: none repeat scroll 0 0 rgba(0, 0, 0, 0);
    margin: -3px 0 0;
    padding: 0;
}
section.page-top ul.breadcrumb > li {
    text-shadow: none;
}
div.google-map {
    background: none repeat scroll 0 0 #e5e3df;
    height: 400px;
    margin-top:50px;
    width: 100%;
}
h1.short, h2.short {
    margin-bottom: 15px;
}
h2 {
    font-size: 2.6em;
    font-weight: 300;
    line-height: 42px;
    margin: 0 0 32px;
}
h1, h2, h3, h4, h5, h6 {
    color: #121214;
    font-weight: 200;
    letter-spacing: -1px;
    margin: 0;
}
.btn-primary, .pagination > .active > a {
    background-color: #0088cc;
    border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
    color: #ffffff;
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
}

/* CATALOG
============================== */

.catalog-section{
  padding: 10px 5%;
  margin-top:50px;
  
}
.catalog-row{
  margin-top:0px;
}
.catalog-col{
  margin-bottom: 20px;
}
.item {
    clip: auto;
    overflow: hidden;
    position: relative;
}
.info {
    margin-bottom: 5px;
    position: relative;
    text-align: right;
    white-space: nowrap;
}
.dots {
    border-bottom: 1px dotted #aaa;
    height: 77%;
    left: 0;
    position: absolute;
    right: 0;
}
.name {
    background: none repeat scroll 0 0 #fffdf8;
    float: left;
    font-size: 16px;
    margin-right: 20px;
    padding-right: 4px;
    position: relative;
}
.price {
    background: none repeat scroll 0 0 #fffdf8;
    padding-left: 4px;
    position: relative;
}
h2.catalog-title {
    font-weight: 200;
    letter-spacing: 0px;
    font-size: 30px;
    margin-top: 30px;
    margin-bottom: 30px;
    text-align: center;
}

h2.no-span {
    display: table;
    white-space: nowrap;
    &:before, &:after {
      // border-top: 1px solid green;
      content: '';
      display: table-cell;
      position: relative;
      top: 0.5em;
      width: 50%;
    }
    &:before { right: 1.5%; }
    &:after { left: 1.5%; }
}
