<%= form_for(@user,  :html => {:id => 'custom_form_id', :class => "col-md-12" }, :multipart => true) do |f| %>
<div class="row">
	<div class="col-md-12">
		<h3>Change User Info</h3>
		<hr>
	</div>
	<div class="col-md-6">
		<div class="form-group">
			<label class="control-label"> User Name </label>
			<%= f.text_field :name, :class => "form-control" %>
		</div>
		<div class="form-group">
			<label class="control-label"> Email Address </label>
			<%= f.text_field :email, :class => "form-control" %>
		</div>
		<div class="form-group">
			<label class="control-label">User Role </label>
			<div>
				<%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}, :class =>"select2-drop-mask") %>
			</div>
		</div>
		<div class="form-group">
			<label class="control-label">Change User Avatar </label>
			<div class="controls">
				<%= f.file_field :avatar %>
			</div>
		</div>
	</div>
	<div class="col-md-6">
		<div class="form-group">
			<label> User Avatar </label>
			<div data-provides="fileupload" class="fileupload fileupload-new">
				<div class="fileupload-new thumbnail">
					<%= image_tag(@user.avatar) if @user.avatar? %>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<div>
			Required Fields
			<hr>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-8">
		<p>
			By clicking UPDATE, you are agreeing to the Policy and Terms &amp; Conditions.
		</p>
	</div>
	<div class="col-md-4">
		<button type="submit" class="btn btn-green btn-block">
			Update Profile <i class="fa fa-arrow-circle-right"></i>
		</button>
	</div>
</div>
<% end %>
