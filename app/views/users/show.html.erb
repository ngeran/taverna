<!-- Users Content Table
================================================== -->
	<div class="container-fluid">
		<h1 class="page-title">Managed Tables <small>sample data tables</small></h1>
		<p id="notice">
			<%= notice %>
		</p>
		<div class="row-fluid">
			<div class="span12">
				<div class="widget">
					<div class="widget-header">
						<h4>Managed Data Table</h4>
					</div>
					<div class="widget-content">
						<table id="data-table" class="table table-striped table-bordered">
							<thead>
								<tr>
									<th class="hidden-phone">ID</th>
									<th class="hidden-phone">Customer Name</th>
									<th class="hidden-phone">Edit</th>
									<th class="hidden-phone">Delete</th>
								</tr>
							</thead>
							<tbody>
								<% @users.each do |user| %>
								<tr class="<%= cycle('even', 'odd') -%>">
									<td class="hidden-phone"><%= user.id %></td>
									<td class="center"><%= user.name %></td>
									<td class="hidden-phone"><%= link_to 'Edit', edit_user_path(user) %></td>
									<td class="hidden-phone"></td>
								</tr>
								<% end %>
							</tbody>
						</table>
						<%= link_to 'New Entry', user_path, {:class=> 'btn'}%>
						<div class="clearfix"></div>
					</div>
				</div>
			</div><!-- end span12 -->
		</div><!-- end row-fluid -->
	</div><!-- end container-fluid -->