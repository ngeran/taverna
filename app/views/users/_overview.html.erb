<!------ Body ------>
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @user.name %></h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div align="center" class="col-md-3 col-lg-3 ">
        <% if @user.avatar %>
            <%= image_tag @user.avatar, :class=>'img-circle' %>
        <% else %>
            <img class="img-circle" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=100" alt="User Pic">
        <% end %>
      </div>
      <div class=" col-md-9 col-lg-9 ">
        <table class="table table-user-information">
          <tbody>
          <tr>
            <td>User name:</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td>User Email:</td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td>Role</td>
            <td><span class="label label-sm label-info"> <%= @user.role %></span></td>
          </tr>

          <tr>
          </tr>
          <tr>
            <td>Created:</td>
            <td><%= @user.created_at.strftime("%b %d, %Y") %></td>
          </tr>
          <tr>
            <td>Last Update:</td>
            <td><%= @user.updated_at.strftime("%b %d, %Y") %></td>
          </tr>
          <tr>
            <td>Last Sign In IP:</td>
            <td><%= @user.last_sign_in_ip %></td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>